<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_qr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="要生成二维码的内容"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_qr"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:layout_gravity="center_horizontal"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_create_qr_with_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="生成二维码--url"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_create_qr_with_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="生成二维码--text"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_create_qr_with_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="生成二维码--带logo"/>

    <TextView
        android:id="@+id/tv_qr_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="二维码图片所展示的内容内容"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_decode_qr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="解析二维码图片"/>
</LinearLayout>