<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_test_net"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试网络" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_test_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试权限" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_test_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试图片加载" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_test_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试RecyclerView列表" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_test_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试下载" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_test_sliding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="侧边栏" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_test_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Viewpager配对标题" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_test_qr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="二维码工具" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_test_shake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="控件震动效果" />
    </LinearLayout>
</ScrollView>
